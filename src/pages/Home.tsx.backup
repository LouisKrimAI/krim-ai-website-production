    { feature: `${CUSTOMER_METRICS.dailyOrchestration} Calls in 11 Hours Scale`, krim: true, others: false },
    { feature: 'On-Premise Deployment', krim: true, others: 'Limited' },
    { feature: `${CUSTOMER_METRICS.paybackPeriod} Month Payback`, krim: true, others: 'Unknown' }
  ]
  
  return (
    <div className="overflow-x-auto">
      <table className="w-full">
        <thead>
          <tr className="border-b border-white/10">
            <th className="text-left py-4 px-6">Capability</th>
            <th className="text-center py-4 px-6">
              <div className="text-krim-mint font-bold">Krim AI</div>
            </th>
            <th className="text-center py-4 px-6">
              <div className="text-text-secondary">Others</div>
            </th>
          </tr>
        </thead>
        <tbody>
          {features.map((row, index) => (
            <motion.tr
              key={index}
              initial={{ opacity: 0, x: -20 }}
              whileInView={{ opacity: 1, x: 0 }}
              viewport={{ once: true }}
              transition={{ duration: 0.4, delay: index * 0.05 }}
              className="border-b border-white/5"
            >
              <td className="py-4 px-6 text-sm">{row.feature}</td>
              <td className="py-4 px-6 text-center">
                {row.krim === true ? (
                  <div className="text-krim-mint text-2xl">✓</div>
                ) : (
                  <span className="text-text-secondary">{row.krim}</span>
                )}
              </td>
              <td className="py-4 px-6 text-center">
                {row.others === false ? (
                  <div className="text-krim-coral text-2xl">✗</div>
                ) : (
                  <span className="text-text-secondary">{row.others}</span>
                )}
              </td>
            </motion.tr>
          ))}
        </tbody>
      </table>
    </div>
  )
}

